    <groupId>fr.univ-cotedazur</groupId>
    <artifactId>demo-module-maven</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>demo-module-maven</name>
    <packaging>pom</packaging>

    <modules>
        <module>greeting-app</module>
        <module>greeting-components</module>
    </modules>

    <properties>
        <junit-jupiter.version>5.8.2</junit-jupiter.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter</artifactId>
                <version>${junit-jupiter.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter-api</artifactId>
                <version>${junit-jupiter.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <distributionManagement>
        <repository>
            <id>central</id>
            <name>bd6cc1cc61fb-releases</name>
            <url>http://vmpx14.polytech.unice.fr:8002/artifactory/myRepo</url>
        </repository>
        <snapshotRepository>
            <id>snapshots</id>
            <name>bd6cc1cc61fb-snapshots</name>
            <url>http://vmpx14.polytech.unice.fr:8002/artifactory/myRepo</url>
        </snapshotRepository>
    </distributionManagement>
    <profiles>
        <profile>
            <id>remote-artefact</id>
            <repositories>
                <repository>
                    <id>snapshots</id>
                    <name>local-artifactory</name>
